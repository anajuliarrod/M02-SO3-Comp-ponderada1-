<div class="login-container">
  <div class="login-card">
      <h1 class="login-title">OrganizaAi</h1>
      <p class="login-subtitle">Faça login para acessar a plataforma</p>
      
      <form id="loginForm">
          <div class="form-group">
              <label class="form-label" for="email">E-mail</label>
              <input type="email" id="email" name="email" class="form-input" placeholder="email@exemplo.com" required>
          </div>
          
          <div class="form-group">
              <label class="form-label" for="password">Senha</label>
              <input type="password" id="password" name="password" class="form-input" placeholder="••••••••" required>
          </div>
          
          <button type="submit" class="btn">Entrar</button>
      </form>
      
      <div class="text-center mt-3">
          <p style="font-size: 14px; color: #666;">
              Não tem uma conta? 
              <a href="#" onclick="showRegisterForm()" style="color: #4a6fa5; text-decoration: none;">Cadastre-se</a>
          </p>
      </div>
  </div>
</div>

<script src="/js/auth.js"></script>
